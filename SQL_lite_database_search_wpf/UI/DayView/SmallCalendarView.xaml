             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQL_lite_database_search_wpf.UI.DayView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="UIMenuChangeColor" Header="Change color" Click="UIMenuChangeColor_Click" />
                <MenuItem x:Name="UIMenuChangeItem" Header="Change item" Click="UIMenuChangeItem_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
       

        <TextBlock x:Name="UITbName"/>
    </Grid>
</UserControl>
