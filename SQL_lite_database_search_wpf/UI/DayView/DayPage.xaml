<UserControl x:Class="SQL_lite_database_search_wpf.UI.DayView.DayPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQL_lite_database_search_wpf.UI.DayView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="LightGray">
            <TextBlock Text="Week number :  "/>
            <TextBlock x:Name="UITbWeekNumber"/>
        </StackPanel>

        <StackPanel x:Name="DayList" Orientation="Horizontal" Grid.Row="1">

        </StackPanel>
    </Grid>
</UserControl>
