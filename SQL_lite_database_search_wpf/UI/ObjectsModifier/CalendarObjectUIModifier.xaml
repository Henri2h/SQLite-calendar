<mui:ModernWindow x:Class="SQL_lite_database_search_wpf.UI.Add_Project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  xmlns:UI="clr-namespace:SQL_lite_database_search_wpf.UI.Controls"
        mc:Ignorable="d"
                  IsTitleVisible="True"
                  
        Title="New project" Height="272" Width="909" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <UI:CalendarInformations x:Name="UICalendarInformation" Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="btOk" Content="Ok" Margin="5" Click="btOk_Click"/>
            <Button x:Name="btCancel" Content="Cancel" Margin="5" Click="btCancel_Click"/>
        </StackPanel>
    </Grid>
</mui:ModernWindow>
