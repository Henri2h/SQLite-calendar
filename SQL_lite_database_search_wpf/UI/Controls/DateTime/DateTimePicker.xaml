<UserControl x:Class="SQL_lite_database_search_wpf.UI.Controls.DateTimePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL_lite_database_search_wpf.UI.Controls"
        mc:Ignorable="d" >
    <StackPanel>
        <DatePicker x:Name="UICalPick"/>
        <StackPanel x:Name="UIStackHours" Orientation="Horizontal">

            <TextBlock Text="HH : "/>
            <local:NumberSelect x:Name="UIlsHours"/>
            <TextBlock Text="MM : "/>
            <local:NumberSelect x:Name="UIlsMinutes"/>

        </StackPanel>
    </StackPanel>
</UserControl>
