             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQL_lite_database_search_wpf.UI.Team"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image x:Name="ImagePicture" Source="/SQL_lite_database_search_wpf;component/Assets/appbar.people.profile.png" Grid.Column="0" Height="30" />
        <StackPanel Grid.Column="1">
            <TextBlock Text="Name : "/>
            <TextBlock x:Name="UITbName"/>
        </StackPanel>
        

    </Grid>
</UserControl>
