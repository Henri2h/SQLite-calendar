<mui:ModernWindow x:Class="SQL_lite_database_search_wpf.UI.Team.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL_lite_database_search_wpf.UI.Team"
       xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="60" Width="229">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="User Name :"/>
            <TextBox x:Name="UITbUserName" MinWidth="80" Margin="5,0,0,0"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="UIBtOK" Content="Add user" Click="UIBtOK_Click" Grid.Column="0"/>
            <Button Content="Cancel" x:Name="UIBtKo" Click="UIBtKo_Click" Grid.Column="1"/>
        </Grid>

    </Grid>
</mui:ModernWindow>
