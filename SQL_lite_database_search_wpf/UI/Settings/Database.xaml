<UserControl x:Class="SQL_lite_database_search_wpf.UI.Settings.Database" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:SQL_lite_database_search_wpf.UI.Settings" 
    xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="To populate"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Database path : "/>
                <TextBlock x:Name="UITbDPath"/>
            </StackPanel>
           
            <Button Content="Change database path" x:Name="UIBtChangeDatabase" Click="UIBtChangeDatabase_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>